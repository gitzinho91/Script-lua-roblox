function gerar() {
  const url = document.getElementById('scriptUrl').value.trim();
  if (!url) {
    alert('Por favor insira uma URL.');
    return;
  }
  // aqui vocÃª cola o script depois...
  document.getElementById('output').textContent = `-- loadstring gerado para:\n-- ${url}\n\n-- cole o script aqui`;
}
